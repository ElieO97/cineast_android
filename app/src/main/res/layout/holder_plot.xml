<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/summary_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/holder_item_movie_textview_margin"
        android:layout_marginTop="@dimen/holder_movie_layout_padding"
        android:text="@string/plot_summary"
        android:textColor="@color/color_white"
        android:textSize="@dimen/toolbar_text_size"
        app:layout_constraintBottom_toTopOf="@id/summary_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/holder_item_movie_textview_margin"
        android:paddingBottom="@dimen/holder_movie_facts_textview_padding_right"
        android:paddingRight="@dimen/holder_movie_facts_textview_padding_right"
        android:paddingTop="@dimen/holder_movie_imageview_padding_bottom"
        android:textColor="@color/color_white"
        android:textSize="@dimen/holder_movie_facts_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary_title_view" />

</android.support.constraint.ConstraintLayout>